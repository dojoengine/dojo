{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "strict": true,
    "types": [
      "jest"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "skipLibCheck": true,
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}