use array::ArrayTrait;
use dojo::query::Query;

#[derive(Component)]
struct Position {
    x: felt,
    y: felt,
}

#[derive(Component)]
struct Health {
    hp: felt, 
}

fn move_inner(query: Query<(Position, Option::<Health>)>, index: u32, count: u32) {
    return move_inner(query, index + 1_u32, count - 1_u32);
}

#[system]
