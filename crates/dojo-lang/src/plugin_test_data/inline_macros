//! > Test set! macro.

//! > test_runner_name
test_expand_plugin

//! > cairo_code
struct Player {
    #[key]
    key: felt252,
    name: felt252
}

struct Position {
    #[key]
    key: felt252,
    x: felt252,
    y: felt252
}

const world: felt252 = 0xbeef;
const player: Player = Player { key: 'key', name: 'name' };

fn foo() {
    set!(world, (
        player,
        Position { key: 'key', x: 0, y: 0 },
    ));
}

//! > generated_cairo_code
struct Player {
    #[key]
    key: felt252,
    name: felt252
}


struct Position {
    #[key]
    key: felt252,
    x: felt252,
    y: felt252
}


const world: felt252 = 0xbeef;

const player: Player = Player { key: 'key', name: 'name' };

fn foo() {
    {
        world.set_entity(player.name(), player.keys(), 0_u8, player.values());
        world
            .set_entity(
                Position { key: 'key', x: 0, y: 0 }.name(),
                Position { key: 'key', x: 0, y: 0 }.keys(),
                0_u8,
                Position { key: 'key', x: 0, y: 0 }.values()
            );
    };
}

//! > expected_diagnostics

//! > ==========================================================================

//! > Test get! macro.

//! > test_runner_name
test_expand_plugin

//! > cairo_code
fn foo() {
    let (position, moves) = get!(world, 0x420, (Position, Moves));
}

//! > generated_cairo_code
fn foo() {
    let (position, moves) = {
        let __get_macro_query__ = 0x420;

        let mut __Position_raw = world
            .entity('Position', __get_macro_query__, 0_u8, dojo::SerdeLen::<Position>::len());
        assert(__Position_raw.len() > 0_usize, 'Position not found');
        let __Position = serde::Serde::<Position>::deserialize(ref __Position_raw)
            .expect('Position failed to deserialize');
        let mut __Moves_raw = world
            .entity('Moves', __get_macro_query__, 0_u8, dojo::SerdeLen::<Moves>::len());
        assert(__Moves_raw.len() > 0_usize, 'Moves not found');
        let __Moves = serde::Serde::<Moves>::deserialize(ref __Moves_raw)
            .expect('Moves failed to deserialize');
        (__Position, __Moves)
    };
}

//! > expected_diagnostics
