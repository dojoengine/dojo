//! > Test set! macro.

//! > test_runner_name
test_expand_plugin

//! > cairo_code
struct Player {
    #[key]
    key: felt252,
    name: felt252
}

struct Position {
    #[key]
    key: felt252,
    x: felt252,
    y: felt252
}

const world: felt252 = 0xbeef;
const player: Player = Player { key: 'key', name: 'name' };

fn foo() {
    set!(world, (
        player,
        Position { key: 'key', x: 0, y: 0 },
    ));

    set!();
    set!(world, ());
}

//! > generated_cairo_code
struct Player {
    #[key]
    key: felt252,
    name: felt252
}


struct Position {
    #[key]
    key: felt252,
    x: felt252,
    y: felt252
}


const world: felt252 = 0xbeef;

const player: Player = Player { key: 'key', name: 'name' };

fn foo() {
    {
        let __set_macro_value__ = player;
        world
            .set_entity(
                __set_macro_value__.name(),
                __set_macro_value__.keys(),
                0_u8,
                __set_macro_value__.values()
            );
        let __set_macro_value__ = Position { key: 'key', x: 0, y: 0 };
        world
            .set_entity(
                __set_macro_value__.name(),
                __set_macro_value__.keys(),
                0_u8,
                __set_macro_value__.values()
            );
    };
; ; }

